{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Resources": {
    "LambdaExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [{
            "Effect": "Allow",
            "Principal": {"Service": [
              "lambda.amazonaws.com",
              "apigateway.amazonaws.com"
            ]},
            "Action": ["sts:AssumeRole"]
          }]
        },
        "Path": "/",
        "Policies": [{
          "PolicyName": "root",
          "PolicyDocument": {
            "Version": "2012-10-17",
            "Statement": [
              {
                "Effect": "Allow",
                "Action": ["logs:*"],
                "Resource": "arn:aws:logs:*:*:*"
              },
              {
                "Effect": "Allow",
                "Action": ["lambda:InvokeFunction"],
                "Resource": "*"
              },
              {
                "Effect": "Allow",
                "Action": ["apigateway:*"],
                "Resource": "*"
              },
              {
                "Effect": "Allow",
                "Action": ["iam:PassRole"],
                "Resource": "*"
              }
            ]
          }
        }]
      }
    }
  },
  "Outputs": {
    "LambdaRoleArn": {
      "Description": "The ARN for the lambda execution role",
      "Value": {"Fn::GetAtt" : ["LambdaExecutionRole", "Arn"] }
    }
  }
}
