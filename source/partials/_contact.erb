<section class='minifast-contact'>
  <section class='minifast-contact__content'>
    <h3 class='minifast-contact__text minifast-contact__text--title'><%= t(:title, scope: [:partials, :contact]) %></h3>
    <p class='minifast-contact__text minifast-contact__text--description'><%= t(:description, scope: [:partials, :contact]) %></p>
  </section>
  <section class='minifast-contact__content'>
    <form class='minifast-contact__form' action='https://docs.google.com/forms/d/e/1FAIpQLSdPecDck3oFIEOJifn8fJL91XCgXr0B1wDupNXu9IOO-lUcUA/formResponse' method='POST'>
      <article class='minifast-contact__field'>
        <input class='minifast-contact__field-input' type='text' autocomplete='name' name='name' required placeholder='<%= t(:name, scope: [:partials, :contact]) %>' aria-label='<%= t(:name, scope: [:partials, :contact]) %>' />
        <div class='minifast-contact__field-line'></div>
      </article>
      <article class='minifast-contact__field'>
        <input class='minifast-contact__field-input' type='email' autocomplete='email' name='emailAddress' required placeholder='<%= t(:email, scope: [:partials, :contact]) %>' aria-label='<%= t(:email, scope: [:partials, :contact]) %>' />
        <div class='minifast-contact__field-line'></div>
      </article>
      <article class='minifast-contact__field'>
        <select class='minifast-contact__select-input' name='entry.980509853' required aria-label='<%= t(:subject, scope: [:partials, :contact]) %>'>
          <option value='' disabled selected hidden><%= t(:subject, scope: [:partials, :contact]) %></option>
          <% t(:subjects, scope: [:partials, :contact]).each do |subject| %>
            <option><%= subject %></option>
          <% end %>
        </select>
        <div class='minifast-contact__field-line'></div>
      </article>
      <button class='minifast-contact__submit'>
        <span class='minifast-contact__submit-text'><%= t(:submit, scope: [:partials, :contact]) %></span>
        <div class='minifast-contact__submit-bar'></div>
      </button>
    </form>
  </section>
</section>
