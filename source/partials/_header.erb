<div class='minifast-header'>
  <div class='minifast-header__container'>
    <h1 class='minifast-header__title'>
      <a href='/' class='minifast-header__link minifast-header__link--title' title='<%= t(:name, scope: :minifast) %>'>
        <%= image_tag 'logos/logo-large.png', class: 'minifast-header__logo minifast-header__logo--large', alt: t(:name, scope: :minifast) %>
        <%= image_tag 'logos/logo-small.png', class: 'minifast-header__logo minifast-header__logo--small', alt: t(:name, scope: :minifast) %>
      </a>
    </h1>
    <input type='checkbox' id='minifast-header__navigation-toggle-input' class='minifast-header__navigation-toggle-input' />
    <label class='minifast-header__navigation-toggle' for='minifast-header__navigation-toggle-input'>
      <span class='minifast-header__navigation-toggle-bar minifast-header__navigation-toggle-bar--top'></span>
      <span class='minifast-header__navigation-toggle-bar minifast-header__navigation-toggle-bar--bottom'></span>
    </label>
    <nav class='minifast-header__navigation'>
      <%= link_to t(:process, scope: [:partials, :header]), '/process', class: 'minifast-header__link' %>
      <%= link_to t(:team, scope: [:partials, :header]), '/team', class: 'minifast-header__link' %>
      <%= link_to t(:work, scope: [:partials, :header]), '/work', class: 'minifast-header__link' %>
      <%= link_to t(:careers, scope: [:partials, :header]), '/careers', class: 'minifast-header__link' %>
      <%= link_to t(:contact, scope: [:partials, :header]), '/contact', class: 'minifast-header__link' %>
    </nav>
  </div>
</div>
